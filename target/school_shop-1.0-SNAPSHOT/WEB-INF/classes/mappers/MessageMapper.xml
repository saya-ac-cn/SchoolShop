<?xml version="1.0" encoding="UTF-8" ?>  
<!DOCTYPE mapper  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"  
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">    
    
<mapper namespace="api.dao.MessageDAO">

    <!--根据用户编号或者用户名查询用户-->
    <select id="getAdmin"  parameterType="Message"  resultType="Message">
       SELECT
        *
      from message
        <where>
            <if test = "id != null and id != ''">
                id  = #{id}
            </if>
            <if test = "send != null and send != ''">
                and send  = #{send}
            </if>
            <if test = "receive != null and receive != ''">
                and receive  = #{receive}
            </if>
            <if test="startTime != null and startTime != ''and endTime != null and endTime != ''">
                and date_format(datetime,'%Y-%m-%d') between date_format(#{startTime},'%Y-%m-%d')  and date_format(#{endTime},'%Y-%m-%d')
            </if>
        </where>
        ORDER BY id DESC
    </select>

    <!-- 发布站内消息 -->
    <insert id="sendMessage" useGeneratedKeys="true" keyProperty="id" parameterType="Message">
        INSERT INTO `message` (
            `send`,
            `receive`,
            `title`,
            `content`,
            `datetime`
        )
        VALUES
            (
                #{send},
                #{receive},
                 #{title},
                #{content},
                #{datetime}
            );
    </insert>

</mapper> 